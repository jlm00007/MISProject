@page
@model MISProject.Pages.PlayerCRUD1.IndexModel

@{
    ViewData["Title"] = "Index";
}

<head>
    <link rel="stylesheet" href="site.css" />
    <style>
        body {
            background-color: cornflowerblue;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }

        #main {
            background-color: white;
            border: solid 2px;
            display: flex;
            justify-content: space-around;
        }

        #Head {
            background-color: indianred;
            display: flex;
            justify-content: space-around;
        }
    </style>
</head>



<h1>Add a player</h1>

<p>
    <a asp-page="Create">Add Player</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Player[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player[0].Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player[0].TID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Player) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
